<body>
    <section class="header">
        <nav>
            <a href="/"><img src="../image/logo.png" id="logo-img"></a>

            <div class="nav-links" id="navLinks">

                <span class="icon" onclick="hidemenu()">&#10005;</span>
                <ul>
                    <li><a href="/ ">Home</a></li>
                    <li><a href="/api/admission ">Admission</a></li>
                    <li><a href="/">Course</a></li>
                    <!-- <li><a href="/fees ">Fees</a></li> -->
                    <li><a href="/api/contact ">Contact</a></li>
                    <li><a href="/api/Sign_up ">Sign Up</a></li>

                </ul>
            </div>
            <span class="icon" onclick="showmenu()">&#9776;</span>
        </nav>
        <div class="wrapper">
            <div class="r_form_wrap">

                <div class="impMsg">
                    <% if(typeof msg !== 'undefined'){ %>
                        <p style="color: red;">
                            <%= msg %>
                        </p>
                        <% } %>
                </div>

                <div class="title">
                    <p>Login</p>
                </div>

                <!-- Admission from -->
                <div class="r_form">
                    <form id="loginForm" enctype="form-data" method="post">
                        <h2>Login</h2>
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>

                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>

                        <button type="submit">Login</button>
                        <p class="signup-link">Don't have an account? <a href="signup.html">Sign up here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <div class="none_div"></div>



</body>
<script src="../javascript/login.js"></script>
